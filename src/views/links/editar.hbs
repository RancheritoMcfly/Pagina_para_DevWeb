<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/editar/{{gastos.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value= "{{gastos.nombre}}" class="form-control" name="nombre" placeholder="Titulo del gasto" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" value = "{{gastos.cantidad}}" name="cantidad" min="1" step="any" class="form-control" placeholder="Cantidad gastada">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control" placeholder="Descripción del gasto">{{gastos.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Salvar edición</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>